@model IEnumerable<ReportViewModel>

@{
    ViewData["Title"] = "Index";
}
<h4 class="m-t-0 header-title">Report</h4>
<form asp-controller="Report" asp-action="Index" method="post" class="mt-3">
    <div class="col-md-4 d-inline ">
        <h6>From</h6>
        <div class="control-group" style="display:inline">
            <div class="controls">
                <div class="input-prepend input-group">
                    <span class="add-on input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type="datetime-local" id="#" class="form-control date-picker" style="width:auto;" name="ReportFrom" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 ">
        <h6>To</h6>
        <div class="control-group">
            <div class="controls">
                <div class="input-prepend input-group">
                    <span class="add-on input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type="datetime-local" id="#" class="form-control date-picker" style="width:auto" name="ReportTo" />
                </div>
            </div>
        </div>
    </div>
    <div style="margin-left:0px" class="form-group row">
        <div class="col-sm-8 ">
            <button type="submit" class="btn btn-danger" style="background-color:maroon">Generate Report</button>
        </div>
    </div>

</form>
<div class="row">
    <div class="col-xl-12">
        <div class="page-title-box">
            <ol class="breadcrumb float-right" style="padding-right:60px"></ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- end row -->
<div class="row">
    <div class="col-12">
        <div class="card-box">
            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                    <tr>
                        <th>
                            DateCreated
                        </th>
                        <th>
                            CustomerName
                        </th>
                        <th>
                            CustomerPhone
                        </th>
                        <th>
                            RoomNumber
                        </th>
                        <th>
                            Fee
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateCreated)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerPhone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoomNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalFee)
                            </td>
                        </tr>
                    }
                    <tr>
                        <td>TotalRoomBooked</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>@ViewBag.TotalRoomBooked </td>
                    </tr>
                    <tr>
                        <td>TotalFee</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>@ViewBag.Fee</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{



    <!-- Required datatable js -->
    <script src="~/report/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/report/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Buttons examples -->
    <script src="~/report/plugins/datatables/dataTables.buttons.min.js"></script>
    <script src="~/report/plugins/datatables/buttons.bootstrap4.min.js"></script>
    <script src="~/report/plugins/datatables/jszip.min.js"></script>
    <script src="~/report/plugins/datatables/pdfmake.min.js"></script>
    <script src="~/report/plugins/datatables/vfs_fonts.js"></script>
    <script src="~/report/plugins/datatables/buttons.html5.min.js"></script>
    <script src="~/report/plugins/datatables/buttons.print.min.js"></script>

    <!-- Key Tables -->
    <script src="~/report/plugins/datatables/dataTables.keyTable.min.js"></script>

    <!-- Responsive examples -->
    <script src="~/report/plugins/datatables/dataTables.responsive.min.js"></script>
    <script src="~/report/plugins/datatables/responsive.bootstrap4.min.js"></script>


    <script>
        $(document).ready(function () {

            //Buttons examples
            var table = $('#datatable-buttons').DataTable({
                lengthChange: false,
                buttons: ['copy', 'excel', 'pdf']
            });

            table.buttons().container()
                .appendTo('#datatable-buttons_wrapper .col-md-6:eq(0)');
        });

    </script>

}
