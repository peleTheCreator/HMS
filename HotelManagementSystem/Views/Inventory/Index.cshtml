@model InventoryWhiteBoardViewModel
@{
    //Layout = null;
    Layout = "~/Views/Shared/_LayoutInventory.cshtml";
 }
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Invgentory</title>
    <!-- vendor css -->
    <link href="../Amanda/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="../Amanda/Ionicons/css/ionicons.css" rel="stylesheet">
    <link href="../Amanda/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">
    <link href="../Amanda/jquery-toggles/toggles-full.css" rel="stylesheet">
    <link href="../Amanda/rickshaw/rickshaw.min.css" rel="stylesheet">  
    <!-- Amanda CSS -->
    <link rel="stylesheet" href="../css/amanda.css">
</head>
<body style="background-color:ghostwhite">
    <div class="row row-sm">
        <div class="col-lg-4">
            <div class="card pd-20">
                <h6 class="tx-12 tx-uppercase tx-inverse tx-bold mg-b-15">Purchase Order</h6>
                <div class="d-flex mg-b-10">
                    <div class="bd-r pd-r-10">
                        <label class="tx-12">Today</label>
                        <p class="tx-lato tx-inverse tx-bold">@Model.PurchaseOrderToday</p>
                        <p class="tx-lato tx-inverse tx-bold">#@Model.PurchaseOrderCostToday</p>
                    </div>
                    <div class="bd-r pd-x-10">
                        <label class="tx-12">This Week</label>
                        <p class="tx-lato tx-inverse tx-bold">@Model.PurchaseOrderThisWeek</p>
                        <p class="tx-lato tx-inverse tx-bold">#@Model.PurchaseOrderCostThisWeek</p>
                    </div>
                    <div class="pd-l-10">
                        <label class="tx-12">This Month</label>
                        <p class="tx-lato tx-inverse tx-bold">@Model.PurchaseOrderThisMonth</p>
                        <p class="tx-lato tx-inverse tx-bold">#@Model.PurchaseOrderCostThisMonth</p>

                    </div>
                </div><!-- d-flex -->
                <div class="progress mg-b-10">
                    <div class="progress-bar wd-50p" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
                </div>
                <p class="tx-12 mg-b-0">Total Purchase Cost && Quantity</p>
            </div><!-- card -->
        </div><!-- col-4 -->
        <div class="col-lg-4 mg-t-15 mg-sm-t-20 mg-lg-t-0">
            <div class="card pd-20">
                <h6 class="tx-12 tx-uppercase tx-inverse tx-bold mg-b-15">Sales Order</h6>
                <div class="d-flex mg-b-10">
                    <div class="bd-r pd-r-10">
                        <label class="tx-12">Today</label>
                        <p class="tx-lato tx-inverse tx-bold">@Model.SalesToDayQuantity</p>
                        <p class="tx-lato tx-inverse tx-bold">#@Model.SalesToDayPrice</p>
                    </div>
                    <div class="bd-r pd-x-10">
                        <label class="tx-12">This Week</label>
                        <p class="tx-lato tx-inverse tx-bold">@Model.SalesThisWeekQuantity</p>
                        <p class="tx-lato tx-inverse tx-bold">#@Model.SalesThisWeekPrice</p>
                    </div>
                    <div class="pd-l-10">
                        <label class="tx-12">This Month</label>
                        <p class="tx-lato tx-inverse tx-bold">@Model.SalesThisMonthQuantity</p>
                        <p class="tx-lato tx-inverse tx-bold">#@Model.SalesThisMonthPrice</p>
                    </div>
                </div><!-- d-flex -->
                <div class="progress mg-b-10">
                    <div class="progress-bar bg-success wd-75p" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
                </div>
                <p class="tx-12 mg-b-0">Total Sales Cost && Sales Quatity </p>
            </div><!-- card -->
        </div><!-- col-4 -->
        <div class="col-lg-4 mg-t-15 mg-sm-t-20 mg-lg-t-0">
            <div class="card pd-20">
                <h6 class="tx-12 tx-uppercase tx-inverse tx-bold mg-b-15">Total Earning</h6>
                <div class="d-flex mg-b-10">
                    <div class="bd-r pd-r-10">
                        <label class="tx-12">Today</label>
                        <p class="tx-lato tx-inverse tx-bold">#@Model.TotalEarningToday</p>
                    </div>
                    <div class="bd-r pd-x-10">
                        <label class="tx-12">This Week</label>
                        <p class="tx-lato tx-inverse tx-bold">#@Model.TotalEarningThisWeek</p>
                    </div>
                    <div class="pd-l-10">
                        <label class="tx-12">This Month</label>
                        <p class="tx-lato tx-inverse tx-bold">#@Model.TotalEarningThisMonth</p>
                    </div>
                </div><!-- d-flex -->
                <div class="progress mg-b-10">
                    <div class="progress-bar bg-danger wd-20p" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">20%</div>
                </div>
                <p class="tx-12 mg-b-0">Total Earning</p>
            </div><!-- card -->
        </div><!-- col-4 -->
    </div><!-- row -->

    <div class="row row-sm mg-t-20">
        <div class="col-lg-4">
            <div class="card">
                <div id="rs1" class="wd-100p ht-200"></div>
                <div class="overlay-body pd-x-20 pd-t-20">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="tx-12 tx-uppercase tx-inverse tx-bold mg-b-15">Overall Money Earned</h6>
                            <p class="tx-12">@DateTime.Now</p>
                        </div>
                        <a href="" class="tx-gray-600 hover-info"><i class="icon ion-more tx-16 lh-0"></i></a>
                    </div><!-- d-flex -->
                    <h2 class="mg-b-5 tx-inverse tx-lato">@Model.TotalEarnings</h2>
                    @*<p class="tx-12 mg-b-0">Earnings before taxes.</p>*@
                </div>
            </div><!-- card -->
        </div><!-- col -->
        <div class="col-lg-4 mg-t-15 mg-sm-t-20 mg-lg-t-0">
            <div class="card">
                <div id="rs2" class="wd-100p ht-200"></div>
                <div class="overlay-body pd-x-20 pd-t-20">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="tx-12 tx-uppercase tx-inverse tx-bold mg-b-15">Total Products</h6>
                            @*<p class="tx-12">@DateTime.Now</p>*@
                        </div>
                        <a href="" class="tx-gray-600 hover-info"><i class="icon ion-more tx-16 lh-0"></i></a>
                    </div><!-- d-flex -->
                    <h2 class="mg-b-5 tx-inverse tx-lato">@Model.TotalProducts</h2>
                    @*<p class="tx-12 mg-b-0">Earnings before </p>*@
                </div>
            </div><!-- card -->
        </div><!-- col -->
        <div class="col-lg-4 mg-t-15 mg-sm-t-20 mg-lg-t-0">
            <div class="card">
                <div id="rs3" class="wd-100p ht-200"></div>
                <div class="overlay-body pd-x-20 pd-t-20">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="tx-12 tx-uppercase tx-inverse tx-bold mg-b-15">Total Vendors</h6>
                            @*<p class="tx-12">November 21, 2017</p>*@
                        </div>
                        <a href="" class="tx-gray-600 hover-info"><i class="icon ion-more tx-16 lh-0"></i></a>
                    </div><!-- d-flex -->
                    <h2 class="mg-b-5 tx-inverse tx-lato">@Model.TotalVendor</h2>
                    @*<p class="tx-12 mg-b-0">Earnings before taxes.</p>*@
                </div>
            </div><!-- card -->
        </div><!-- col -->
    </div><!-- row -->

    <script src="../lib/jquery/jquery.js"></script>
    <script src="../Amanda/popper.js/popper.js"></script>
    <script src="../lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="../Amanda/perfect-scrollbar/js/perfect-scrollbar.jquery.js"></script>
    <script src="../Amanda/jquery-toggles/toggles.min.js"></script>
    <script src="../Amanda/d3/d3.js"></script>
    <script src="../Amanda/rickshaw/rickshaw.min.js"></script>
    <script src="http://maps.google.com/maps/api/js?key=AIzaSyAEt_DBLTknLexNbTVwbXyq2HSf2UbRBU8"></script>

    <script src="../js/amanda.js"></script>
    <script src="../js/ResizeSensor.js"></script>
    <script src="../js/widgets.js"></script>
</body>
</html>