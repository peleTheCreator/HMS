<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory Management</title>
    <link href="~/inv/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <!--datatables.net-->
    <link href="~/inv/lib/DataTables/datatables.min.css" rel="stylesheet" />
    <!--datatables.net-->
    <!--jquery numpad-->
    <link href="~/inv/lib/jquerey-numpad/jquery.numpad.css" rel="stylesheet" />
    <!--jquery numpad-->
    <!--toastr-->
    <link href="~/inv/lib/toastr/toastr.css" rel="stylesheet" />
    <!--toastr-->
    <link href="~/inv/css/site.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light text-white  border-bottom box-shadow mb-3" style="background-color:maroon">
            <div class="container">
                <a class="text-white text-lg  navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Transylvania</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Inventory" asp-action="Index">WhiteBoard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="Index">Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Vendor" asp-action="Index">Vendor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="PurchaseOrder" asp-action="Index">PO</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="SalesOrder" asp-action="Index">SO</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Inventory" asp-action="Report">Report</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            Copyright © @DateTime.Now.Year <a> Hotel Management System.</a> All rights reserved.
        </div>
    </footer>
    <script src="~/inv/lib/jquery/dist/jquery.js"></script>

    <script src="~/inv/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

    <!--datatables.net-->
    <script src="../inv/lib/DataTables/datatables.min.js"></script>
    <!--datatables.net-->
    <!--axios-->
    <script src="../inv/lib/axios/axios.min.js"></script>
    <!--axios-->
    <!--jquery numpad-->
    <script src="../inv/lib/jquerey-numpad/jquery.numpad.js"></script>
    <!--jquery numpad-->
    <!--toastr-->
    <script src="../inv/lib/toastr/toastr.min.js"></script>
    <!--toastr-->
    @RenderSection("Scripts", required: false)
</body>
</html>
